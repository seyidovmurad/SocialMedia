@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Login Page";
}

<div class="account">
    <h2>Login into your account</h2>
    <form asp-action="Login" method="post">
        <h3>@TempData["Error"]</h3>
        <div class="form-input">
            <i class="fa-solid fa-user"></i>
            <input asp-for="Username" type="text" placeholder="Username" />
            <span asp-validation-for="Username"></span>
        </div>
        <div class="form-input">
            <i class="fa-solid fa-lock"></i>
            <input asp-for="Password" type="password" placeholder="Password" />
            <span asp-validation-for="Password"></span>
        </div>

        <button class="form-submit">Login</button>
        <p>Don't have a account? <a asp-controller="Account" asp-action="Register"><span>Register</span></a></p>
    </form>
    <div class="others">
        <p>Or, Sign in with your social account</p>
        <button>
            <div class="icon">
                <i class="fa-brands fa-google"></i>
            </div>
            <div class="btn-txt">Sign in with Google</div>
        </button>
        <button>
            <div class="icon">
                <i class="fa-brands fa-facebook-f"></i>
            </div>
            <div class="btn-txt">Sign in with Facebook</div>
        </button>
    </div>
</div>

